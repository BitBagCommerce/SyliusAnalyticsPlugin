<script>
    {% for event in events %}
        {% if event.options is defined %}
            {% if event.name == "Purchase" %}
            gtag('event', '{{ event.name }}',
                {
                    "transaction_id": '{{ event.options.transaction_id }}',
                    "value": '{{ event.options.value }}',
                    "currency": '{{ event.options.currency }}',
                });
            {% elseif event.name == "SetCheckoutOption" %}
            gtag('event', '{{ event.name }}',
                {
                    "checkout_state": '{{ event.options.checkout_state }}',
                    "value": '{{ event.options.value }}',
                });
                {% endif %}
        {% else %}
        gtag('event', '{{ event.name }}');
        {% endif %}
    {% endfor %}
</script>
