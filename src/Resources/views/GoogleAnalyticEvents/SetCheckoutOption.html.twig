<script>
    {% if  settings.order.checkoutState  == "cart" %}
        gtag('event', 'set_checkout_option', {
            "checkout_step": 1,
            "checkout_option": '{{ settings.order.checkoutState }}',
            "value": '{{ settings.order.total }}',
        });
    {% elseif  settings.order.checkoutState  == "addressed" %}
        gtag('event', 'set_checkout_option', {
            "checkout_step": 2,
            "checkout_option": '{{ settings.order.checkoutState }}',
            "value": '{{ settings.order.total }}',
        });
    {% elseif  settings.order.checkoutState  == "shipping_selected" %}
        gtag('event', 'set_checkout_option', {
            "checkout_step": 3,
            "checkout_option": '{{ settings.order.checkoutState }}',
            "value": '{{ settings.order.total }}',
        });
    {% elseif  settings.order.checkoutState  == "payment_selected" %}
        gtag('event', 'set_checkout_option', {
            "checkout_step": 4,
            "checkout_option": '{{ settings.order.checkoutState }}',
            "value": '{{ settings.order.total }}',
        });
    {% endif %}
</script>
